<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/name"
            android:ems="10"
            android:id="@+id/etName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:autofillHints="@string/name"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="@string/email_optional"
            android:ems="10"
            android:id="@+id/etMail"
            app:layout_constraintTop_toBottomOf="@+id/etName"
            app:layout_constraintStart_toStartOf="parent"
            android:autofillHints="@string/email"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spnrFeedbackCategory"
            app:layout_constraintTop_toBottomOf="@+id/etMail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/etMail"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/etFeedback"
            android:hint="@string/enter_feedback"
            app:layout_constraintTop_toBottomOf="@+id/spnrFeedbackCategory"
            app:layout_constraintStart_toStartOf="parent"
            android:autofillHints="@string/enter_feedback"
            app:layout_constraintBottom_toTopOf="@+id/btCancel"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="@string/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btCancel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btSubmit"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="@string/submit_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btSubmit"
            app:layout_constraintStart_toEndOf="@+id/btCancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>