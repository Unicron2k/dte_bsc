<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        tools:context=".MainActivity">

    <TextView
            android:text="tvDisplayMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDisplayMessage"
            android:gravity="center"
            android:textStyle="bold|italic"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/dpDateGiven"/>
    <DatePicker
            android:id="@+id/dpDateGiven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:layout_constraintBottom_toTopOf="@id/btnCalculate"
            app:layout_constraintTop_toBottomOf="@id/tvDisplayMessage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="@string/calculate_no_of_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCalculate"
            android:layout_weight="1"
            android:textSize="18sp"
            android:onClick="calculateDiff"
            app:layout_constraintTop_toBottomOf="@id/dpDateGiven"
            app:layout_constraintBottom_toTopOf="@id/tvDisplayDiff"
            app:layout_constraintEnd_toEndOf="@+id/dpDateGiven"
            app:layout_constraintStart_toStartOf="@+id/dpDateGiven"/>
    <TextView
            android:text="@string/noDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvDisplayDiff"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textStyle="bold|italic"
            android:background="#FF00FF00"
            android:textSize="36sp"
            android:textColor="#1E1E1E"
            app:layout_constraintTop_toBottomOf="@id/btnCalculate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>